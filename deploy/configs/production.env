# NQBA Platform - Production Environment Configuration
# DO NOT commit this file with real secrets - use as template

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
WORKERS=4

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=${NQBA_SECRET_KEY}
JWT_SECRET_KEY=${NQBA_JWT_SECRET_KEY}
ENCRYPTION_KEY=${NQBA_ENCRYPTION_KEY}

# CORS Configuration
CORS_ORIGINS=https://app.flyfox.ai,https://api.flyfox.ai
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=${NQBA_DATABASE_URL}
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_SSL_MODE=require

# Database Connection Retry
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=1

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=${NQBA_REDIS_URL}
REDIS_POOL_SIZE=20
REDIS_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=true
REDIS_HEALTH_CHECK_INTERVAL=30

# =============================================================================
# QUANTUM COMPUTING SETTINGS
# =============================================================================
# Dynex Configuration
DYNEX_API_KEY=${NQBA_DYNEX_API_KEY}
DYNEX_API_URL=https://api.dynexcoin.org
DYNEX_TIMEOUT=300
DYNEX_MAX_RETRIES=3
DYNEX_RETRY_DELAY=5

# Quantum Circuit Limits
QUANTUM_MAX_QUBITS=50
QUANTUM_MAX_CIRCUIT_DEPTH=1000
QUANTUM_TIMEOUT=600

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=${NQBA_OPENAI_API_KEY}
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=60

# Model Caching
MODEL_CACHE_TTL=3600
MODEL_CACHE_SIZE=1000

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Logging
LOG_FORMAT=json
LOG_ROTATION=true
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10
LOG_COMPRESSION=true

# Tracing
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.1
JAEGER_ENDPOINT=${JAEGER_ENDPOINT}

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================
# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=INFO
AUDIT_RETENTION_DAYS=2555  # 7 years

# Data Encryption
ENCRYPTION_AT_REST=true
ENCRYPTION_IN_TRANSIT=true
ENCRYPTION_ALGORITHM=AES-256-GCM

# Key Management
KMS_PROVIDER=aws
KMS_KEY_ID=${AWS_KMS_KEY_ID}
KEY_ROTATION_ENABLED=true
KEY_ROTATION_INTERVAL=90  # days

# Compliance
GDPR_ENABLED=true
CCPA_ENABLED=true
SOC2_COMPLIANCE=true
DATA_RESIDENCY=US

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Caching
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Connection Pooling
HTTP_POOL_SIZE=100
HTTP_POOL_TIMEOUT=30
HTTP_KEEP_ALIVE=true

# Background Tasks
CELERY_BROKER_URL=${NQBA_REDIS_URL}
CELERY_RESULT_BACKEND=${NQBA_REDIS_URL}
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC
CELERY_WORKER_CONCURRENCY=4

# =============================================================================
# BUSINESS INTEGRATION
# =============================================================================
# FLYFOX AI
FLYFOX_API_URL=https://api.flyfox.ai
FLYFOX_API_KEY=${FLYFOX_API_KEY}

# Sigma Select
SIGMA_SELECT_API_URL=https://api.sigmaselect.com
SIGMA_SELECT_API_KEY=${SIGMA_SELECT_API_KEY}

# Goliath Trade
GOLIATH_TRADE_API_URL=https://api.goliath.trade
GOLIATH_TRADE_API_KEY=${GOLIATH_TRADE_API_KEY}

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email Service
EMAIL_PROVIDER=aws-ses
EMAIL_FROM_ADDRESS=noreply@flyfox.ai
EMAIL_REGION=us-west-2

# File Storage
STORAGE_PROVIDER=aws-s3
STORAGE_BUCKET=${AWS_S3_BUCKET}
STORAGE_REGION=us-west-2
STORAGE_ENCRYPTION=true

# CDN
CDN_ENABLED=true
CDN_URL=${CLOUDFRONT_DOMAIN}

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================
# Container Settings
CONTAINER_PORT=8000
CONTAINER_WORKERS=4
CONTAINER_TIMEOUT=300
CONTAINER_KEEP_ALIVE=2

# Kubernetes
KUBERNETES_NAMESPACE=nqba-platform
KUBERNETES_SERVICE_ACCOUNT=nqba-api

# Load Balancer
LOAD_BALANCER_TIMEOUT=60
LOAD_BALANCER_HEALTH_CHECK=/health
LOAD_BALANCER_HEALTH_CHECK_INTERVAL=30

# Auto Scaling
AUTO_SCALING_ENABLED=true
AUTO_SCALING_MIN_REPLICAS=3
AUTO_SCALING_MAX_REPLICAS=20
AUTO_SCALING_TARGET_CPU=70
AUTO_SCALING_TARGET_MEMORY=80

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================
# Database Backups
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM UTC
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true

# Point-in-Time Recovery
PITR_ENABLED=true
PITR_RETENTION_DAYS=7

# Cross-Region Replication
CROSS_REGION_BACKUP=true
BACKUP_REGION=us-east-1